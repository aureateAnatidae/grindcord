{
    "compilerOptions": {
        "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Promise"],
        "module": "NodeNext",
        "moduleResolution": "bundler",

        "rootDir": ".",
        "outDir": "build",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,

        "baseUrl": "src",
        "paths": {
            "@helper/*": ["helper/*"],
            "@event/*": ["interaction/event/*"],
            "@command/*": ["interaction/command/*"],
            "@component/*": ["interaction/component/*"]
        }
    }
}
